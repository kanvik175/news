.main-header {
  background-image: url('../../images/main_page_header.png');
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  width: 100%;
  height: 576px;
  position: relative;
}

.main-header__navigation {
  position: absolute;
  top: 0;
}

.main-header__content-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(100% - 80px);
}

.main-header__title-group {
  max-width: 545px;
}

.main-header__title {
  font-size: 60px;
  font-family: 'Roboto Slab';
  font-weight: normal;
  line-height: 64px;
  color: #ffffff;
  margin-bottom: 32px;
}

.main-header__subtitle {
  color: #ffffff;
  font-weight: normal;
  line-height: 24px;
  margin-bottom: 64px;
}

@media screen and (max-width: 767px) {
  .main-header {
    height: 536px;
  }

  .main-header__content-container {
    height: calc(100% - 56px);
  }

  .main-header__title {
    font-size: 36px;
    margin: 30px 0 16px;
    line-height: 40px;
  }

  .main-header__content {
    height: 100%;
    padding: 0 19px 30px;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
}
